{
  "name": "@tomjs/vscode-dev",
  "type": "commonjs",
  "version": "3.1.2",
  "description": "Some development tools to simplify the development of vscode extensions",
  "author": {
    "name": "Tom Gao",
    "email": "tom@tomgao.cc"
  },
  "license": "MIT",
  "repository": {
